<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/Profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:text="@string/btn_my_profile" />

    <Button
        android:id="@+id/mMyKurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:text="@string/btn_my_lessons" />

    <Button
        android:id="@+id/TpFinden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:text="@string/btn_search_dancingpartner" />

    <Button
        android:id="@+id/Konv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:text="@string/btn_my_conversations" />

    <Button
        android:id="@+id/mFRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:text="@string/btn_friend_requests" />

    

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RadioGroup>

</LinearLayout>