<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/Profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mein Profil" />

    <Button
        android:id="@+id/mMyKurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meine Kurse" />

    <Button
        android:id="@+id/Konv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Koversationen" />

    <Button
        android:id="@+id/TpFinden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanzpartner/in finden" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fnameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kommst du auf die Tanzparty ?"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/yRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Ja" />

        <RadioButton
            android:id="@+id/nRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nein" />
    </RadioGroup>

    <TextView
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>